<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="eus.tartangalh.crud.controladores.ProductoFarmaceuticoUIController" spacing="10">
    <!-- Título principal -->
    <Label text="Producto Farmacéutico">
        <font>
            <Font size="24"/>
        </font>
    </Label>
    
    <!-- Formulario de búsqueda -->
    <GridPane prefHeight="46.0" prefWidth="402.0" hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints />
            <RowConstraints />
        </rowConstraints>
        <children>
            <!-- Filtro por tipo (ComboBox) -->
            <ComboBox fx:id="combo" prefWidth="150.0" promptText="Filtrar Por:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>

            <!-- Filtro por fechas -->
            <DatePicker fx:id="txtFechaDesde" promptText="Desde" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            <DatePicker fx:id="txtFechaHasta" promptText="Hasta" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

            <!-- Filtro por texto (ID, nombre, lote) -->
            <TextField fx:id="txtFiltro" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

            <!-- Filtro por categoría -->
            <ChoiceBox fx:id="catField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
        </children>
    </GridPane>

    <!-- Tabla de productos -->
    <TableView fx:id="tableView">
        <columns>
            <TableColumn fx:id="idColumn" text="ID"/>
            <TableColumn fx:id="nombreColumn" text="Nombre"/>
            <TableColumn fx:id="loteColumn" text="Lote"/>
            <TableColumn fx:id="caducidadColumn" text="Caducidad"/>
            <TableColumn fx:id="descripcionColumn" text="Descripción"/>
            <TableColumn fx:id="categoriaColumn" text="Categoría"/>
        </columns>
    </TableView>

    <!-- Botones de acción -->
    <HBox spacing="10">
        <Button fx:id="addButton" text="Añadir línea" onAction="#añadirFila"/>
        <Button fx:id="deleteButton" text="Eliminar" onAction="#borrarFila"/>
    </HBox>
</VBox>