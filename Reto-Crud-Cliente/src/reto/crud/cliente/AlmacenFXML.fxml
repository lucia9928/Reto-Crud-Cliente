<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eus.tartangalh.crud.controladores.AlmacenFXMLControlador">
    <!-- Título principal -->
    <Label text="Almacen">
        <font>
            <Font size="24" />
        </font>
    </Label>
   <GridPane prefHeight="49.0" prefWidth="402.0">
     <columnConstraints>
       <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
       <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
     </columnConstraints>
     <rowConstraints>
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
     </rowConstraints>
      <children>
         <ComboBox fx:id="combo" prefWidth="150.0" promptText="Filtrar Por:" GridPane.rowIndex="1" />
         <TextField fx:id="txtId" GridPane.columnIndex="1" GridPane.rowIndex="1" />
         <TextField fx:id="txtFechaDesde" GridPane.columnIndex="1" />
         <TextField fx:id="txtFechaHasta" GridPane.columnIndex="1" GridPane.rowIndex="2" />
         <TextField fx:id="txtCiudad" GridPane.columnIndex="1" GridPane.rowIndex="1" />
         <TextField fx:id="txtPais" GridPane.columnIndex="1" GridPane.rowIndex="1" />
         <TextField fx:id="txtMetros" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      </children>
   </GridPane>
    
    <!-- Tabla de productos -->
    <TableView fx:id="almacenTableView">
        <columns>
            <TableColumn fx:id="idAlmacenColumna" text="ID Almacén" />
            <TableColumn fx:id="paisColumna" text="País" />
            <TableColumn fx:id="ciudadColumna" text="Ciudad" />
            <TableColumn fx:id="metrosCuadradosColumna" text="Metros Cuadrados" />
            <TableColumn fx:id="fechaAdquisicionColumna" text="Fecha Adquisición" />
        </columns>
    </TableView>
    
    <!-- Botones de acción -->
    <HBox spacing="10">
        <Button fx:id="añadirBtn" onAction="#añadirFila" text="Añadir línea" />
        <Button fx:id="borrarBtn" onAction="#borrarFila" text="Eliminar" />
    </HBox>
</VBox>
